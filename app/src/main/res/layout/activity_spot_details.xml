<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="景　點　名　稱"
            android:textSize="32dp"
            android:padding="5dp"
            android:id="@+id/textView_title" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </LinearLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like_Bar"
        android:numStars="5"
        android:stepSize="0.5"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@mipmap/loading"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_below="@+id/like_Bar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="心情點滴："
        android:textSize="16dp"
        android:padding="5dp"
        android:layout_row="5"
        android:layout_column="0"
        android:id="@+id/textView26"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址："
        android:textSize="16dp"
        android:padding="5dp"
        android:layout_row="5"
        android:layout_column="0"
        android:id="@+id/textView_address"
        android:layout_below="@+id/textView_introduction"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="類型："
        android:textSize="16dp"
        android:padding="5dp"
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/textView_type"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_address"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話："
        android:textSize="16dp"
        android:padding="5dp"
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/textView_phone"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_type"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="　　簡介"
        android:textSize="16dp"
        android:padding="5dp"
        android:layout_row="5"
        android:layout_column="0"
        android:id="@+id/textView_introduction"
        android:layout_below="@+id/textView26"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯內容"
        android:id="@+id/button_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入清單"
        android:id="@+id/button_addlist"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="路線規劃"
        android:id="@+id/button_map"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>