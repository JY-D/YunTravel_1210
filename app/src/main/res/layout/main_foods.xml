<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="3dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="餐廳美食查尋"
        android:textSize="32sp"
        android:id="@+id/textView8"
        android:layout_weight="0.05" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="餐廳名稱："
            android:textSize="20sp"
            android:id="@+id/textView9"
            android:layout_weight="1.5" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:id="@+id/editText_foods"
            android:inputType="text"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="縣市："
            android:textSize="20sp"
            android:id="@+id/textView10"
            android:layout_weight="1.5" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_1"
            android:entries="@array/region_list_Taiwan"
            android:spinnerMode="dialog"
            android:prompt="@string/select_region_dialog_title1"
            android:layout_weight="8.5"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="地區："
            android:textSize="20sp"
            android:id="@+id/textView11"
            android:layout_weight="1.5" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_2"
            android:entries="@array/region_list"
            android:spinnerMode="dialog"
            android:prompt="@string/select_region_dialog_title2"
            android:layout_weight="8.5"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_foods"
        android:padding="3dp"
        android:textSize="20sp"
        android:id="@+id/textView14" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中式　"
                android:id="@+id/checkBox1_ch"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台式　"
                android:id="@+id/checkBox2_tw"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日式　"
                android:id="@+id/checkBox3_jp"
                android:layout_weight="0.05"  />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小吃　"
                android:id="@+id/checkBox10_nm"
                android:layout_weight="0.05" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西式　"
                android:id="@+id/checkBox4_ep"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南洋　"
                android:id="@+id/checkBox5_sa"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="火鍋類"
                android:id="@+id/checkBox6_big"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="燒烤類"
                android:id="@+id/checkBox11_fire"
                android:layout_weight="0.05" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐店"
                android:id="@+id/checkBox7_break"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午茶"
                android:id="@+id/checkBox8_tea"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="素食　"
                android:id="@+id/checkBox9_v"
                android:layout_weight="0.05" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清真　"
                android:id="@+id/checkBox12_hala"
                android:layout_weight="0.05" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="確  定"
            android:id="@+id/button_foodsOK"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />
    </LinearLayout>

</LinearLayout>